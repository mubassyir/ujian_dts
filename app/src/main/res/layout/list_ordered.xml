<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_bread_image"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/tv_bread_name"
        android:text="Bake Name"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_bread_image"
        android:layout_toEndOf="@+id/iv_bread_image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_price"
        android:text="Price"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bread_name"
        android:layout_alignLeft="@+id/tv_bread_name"
        android:layout_alignStart="@+id/tv_bread_name"
        />
    <TextView
        android:id="@+id/tv_customer"
        android:text="customer name"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:layout_alignLeft="@+id/tv_bread_name"
        android:layout_alignStart="@+id/tv_bread_name"
        />
</RelativeLayout>